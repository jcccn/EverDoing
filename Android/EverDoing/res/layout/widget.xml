<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2dp"
    android:background="@drawable/round_rect"
    android:orientation="vertical"
    android:padding="0dp" >

    <TextView
        android:id="@+id/widget_title"
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/round_rect_top"
        android:drawableRight="@drawable/plus"
        android:gravity="center_vertical"
        android:paddingBottom="3dp"
        android:paddingLeft="5dp"
        android:paddingRight="10dp"
        android:singleLine="true"
        android:text="@string/widget_name"
        android:textColor="@color/white"
        android:textSize="11dp" />

    <TextView
        android:id="@+id/widget_divider_0"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/widget_title"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/gray"
        android:textSize="12dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/widget_item_0"
        android:layout_width="match_parent"
        android:layout_height="21dp"
        android:layout_below="@id/widget_divider_0"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:drawableLeft="@drawable/dot_gray"
        android:drawablePadding="4dp"
        android:textColor="@color/black"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/widget_divider_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/widget_item_0"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/gray"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/widget_item_1"
        android:layout_width="match_parent"
        android:layout_height="21dp"
        android:layout_below="@id/widget_divider_1"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:drawableLeft="@drawable/dot_gray"
        android:drawablePadding="4dp"
        android:textColor="@color/black"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/widget_divider_2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/widget_item_1"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/gray"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/widget_item_2"
        android:layout_width="match_parent"
        android:layout_height="21dp"
        android:layout_below="@id/widget_divider_2"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:drawableLeft="@drawable/dot_gray"
        android:drawablePadding="4dp"
        android:textColor="@color/black"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/widget_divider_3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/widget_item_2"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/gray"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/widget_item_3"
        android:layout_width="match_parent"
        android:layout_height="21dp"
        android:layout_below="@id/widget_divider_3"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:drawableLeft="@drawable/dot_gray"
        android:drawablePadding="4dp"
        android:textColor="@color/black"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/widget_divider_4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/widget_item_3"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/gray"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/widget_item_4"
