<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="146dp"
    android:layout_height="146dp"
    android:background="@drawable/round_rect"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/widget_title"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:layout_alignParentTop="true"
        android:singleLine="true"
        android:text="@string/hello"
        android:textColor="@color/black"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/widget_divider_0"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/widget_title"
        android:background="@color/gray"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/widget_item_0"
        android:layout_width="match_parent"
        android:layout_height="21dp"
        android:layout_below="@id/widget_divider_0"
        android:drawableLeft="@drawable/dot"
        android:drawablePadding="4dp"
        android:textColor="@color/black"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/widget_divider_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/widget_item_0"
        android:background="@color/gray"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/widget_item_1"
        android:layout_width="match_parent"
        android:layout_height="21dp"
        android:layout_below="@id/widget_divider_1"
        android:drawableLeft="@drawable/dot"
        android:drawablePadding="4dp"
        android:textColor="@color/black"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/widget_divider_2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/widget_item_1"
        android:background="@color/gray"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/widget_item_2"
        android:layout_width="match_parent"
        android:layout_height="21dp"
        android:layout_below="@id/widget_divider_2"
        android:drawableLeft="@drawable/dot"
        android:drawablePadding="4dp"
        android:textColor="@color/black"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/widget_divider_3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/widget_item_2"
        android:background="@color/gray"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/widget_item_3"
        android:layout_width="match_parent"
        android:layout_height="21dp"
        android:layout_below="@id/widget_divider_3"
        android:drawableLeft="@drawable/dot"
        android:drawablePadding="4dp"
        android:textColor="@color/black"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/widget_divider_4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/widget_item_3"
        android:background="@color/gray"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/widget_item_4"
        android:layout_width="match_parent"
        android:layout_height="21dp"
        android:layout_below="@id/widget_divider_4"
        android:drawableLeft="@drawable/dot"
        android:drawablePadding="4dp"
        android:textColor="@color/black"
        android:textSize="14dp" />

</RelativeLayout>