<?xml version="1.0" encoding="utf-8"?>
<com.senseforce.framework.ui.TitleBar xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_bar"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@drawable/shape_round_top"
    android:tag="title_bar" >

    <RelativeLayout
        android:id="@+id/title_left_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:background="@android:color/transparent"
        android:gravity="center_vertical"
        android:padding="0dp"
        android:tag="title_left_view"
        android:visibility="gone" >
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/title_right_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        android:gravity="center_vertical"
        android:padding="0dp"
        android:tag="title_right_view"
        android:visibility="gone" >
    </RelativeLayout>

    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="20dp" />

</com.senseforce.framework.ui.TitleBar>